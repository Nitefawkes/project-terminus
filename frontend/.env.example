# Project Terminus - Frontend Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL (default: http://localhost:3001)
NEXT_PUBLIC_API_URL=http://localhost:3001

# =============================================================================
# Map Configuration
# =============================================================================

# Mapbox Access Token (required for map functionality)
# Get your token at: https://account.mapbox.com/access-tokens/
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here

# Optional: Custom tile server URL
# NEXT_PUBLIC_TILE_SERVER_URL=

# =============================================================================
# External APIs (Optional)
# =============================================================================

# NOAA Space Weather API (optional - has public endpoint)
# NEXT_PUBLIC_NOAA_API_KEY=

# N2YO Satellite Tracking API (optional)
# Get your key at: https://www.n2yo.com/api/
# NEXT_PUBLIC_N2YO_API_KEY=

# =============================================================================
# Analytics & Monitoring (Optional)
# =============================================================================

# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=

# Google Analytics Measurement ID
# NEXT_PUBLIC_GA_MEASUREMENT_ID=

# =============================================================================
# Feature Flags (Optional)
# =============================================================================

# Enable debug mode
# NEXT_PUBLIC_DEBUG=false

# Enable kiosk mode by default
# NEXT_PUBLIC_DEFAULT_KIOSK_MODE=false

# =============================================================================
# Development (Optional)
# =============================================================================

# Skip authentication in development (not recommended)
# NEXT_PUBLIC_SKIP_AUTH=false

# Mock API responses for development
# NEXT_PUBLIC_MOCK_API=false
