{
  "name": "project-terminus",
  "version": "0.1.0",
  "description": "Global Intelligence Dashboard with OSINT Heat Map",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run start:dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "clean": "rimraf frontend/dist frontend/.next backend/dist",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "cd backend && npm run migration:run",
    "db:seed": "cd backend && npm run seed:run"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nitefawkes/project-terminus.git"
  },
  "author": "Nitefawkes",
  "license": "MIT",
  "keywords": [
    "osint",
    "geospatial",
    "intelligence",
    "dashboard",
    "mapping",
    "real-time",
    "surveillance",
    "analytics"
  ]
}
